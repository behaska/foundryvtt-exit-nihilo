<div class="hover-content" id="{{@root.options.id}}-{{slug}}-modifiers">
    <div class="sidebar_title">
        <h2>{{localize title}}</h2>
    </div>
    <ul class="modifier-list">
        {{#each _modifiers as |modifier|}}
            {{#if (or modifier.enabled (not modifier.hideIfDisabled))}}
                <li class="item {{#unless modifier.enabled}}no-effect{{/unless}}">
                    <span class="tag-legacy">
                        {{localize (add "EXITNIHILO.ModifierType." modifier.type)}}
                    </span>
                    <span class="label">{{modifier.label}}</span>
                    <span class="data">{{numberFormat modifier.modifier decimals=0 sign=true}}</span>
                    {{#if modifier.custom}}
                        <i class="far fa-times-circle remove-modifier" data-stat="{{../slug}}" data-slug="{{modifier.slug}}" title="{{localize "EXITNIHILO.RemoveModifierTitle"}}"></i>
                    {{/if}}
                </li>
            {{/if}}
        {{/each}}
        <li class="item add-modifier">
            <div class="add-modifier-value">
                <input type="number" placeholder="+1">
                <i class="fas fa-plus-circle"></i>
                <i class="fas fa-minus-circle"></i>
            </div>

            <input type="text" class="add-modifier-name" placeholder={{localize "EXITNIHILO.ModifierNamePlaceholder"}}>

            <select class="tag-legacy add-modifier-type">
                <option value="">{{localize "EXITNIHILO.ModifierTypeTitle"}}</option>
                <option value="ability">{{localize "EXITNIHILO.ModifierType.ability"}}</option>
                <option value="proficiency">{{localize "EXITNIHILO.ModifierType.proficiency"}}</option>
                <option value="item">{{localize "EXITNIHILO.ModifierType.item"}}</option>
                <option value="status">{{localize "EXITNIHILO.ModifierType.status"}}</option>
                <option value="circumstance">{{localize "EXITNIHILO.ModifierType.circumstance"}}</option>
                {{#if abpEnabled}}<option value="potency">{{localize "EXITNIHILO.ModifierType.potency"}}</option>{{/if}}
                <option value="untyped">{{localize "EXITNIHILO.ModifierType.untyped"}}</option>
            </select>

            <button type="button" class="add-modifier-submit" data-stat="{{slug}}">{{localize "EXITNIHILO.AddModifierTitle"}}</button>
        </li>
    </ul>
</div>
