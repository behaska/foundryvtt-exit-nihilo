<form autocomplete="off">
    <div class="form-group">
        <label>{{localize "EXITNIHILO.Actor.Creature.Configure.Alliance.Label"}}</label>
        <select name="system.details.alliance">
            {{#each alliances as |option|}}
                <option value="{{option.value}}"{{#if option.selected}} selected="selected"{{/if}}>{{localize option.label}}</option>
            {{/each}}
        </select>
        <p class="hint">{{localize "EXITNIHILO.Actor.Creature.Configure.Alliance.Hint"}}</p>
    </div>
    <div class="form-group">
        <label>{{localize "EXITNIHILO.Actor.NPC.Configure.Lootable.Label"}}</label>
        <select name="flags.exit-nihilo.lootable">
            {{#each lootable as |option|}}
                <option value="{{option.value}}"{{#if option.selected}} selected="selected"{{/if}}>{{localize option.label}}</option>
            {{/each}}
        </select>
        <p class="hint">{{{localize "EXITNIHILO.Actor.NPC.Configure.Lootable.Hint"}}}</p>
    </div>
    <button type="submit">
        <i class="fas fa-save"></i> {{localize "SETTINGS.Save"}}
    </button>
</form>
