                        {{> "systems/exit-nihilo/templates/partials/pentagon-composant.hbs"
                            imgSrc = "systems/exit-nihilo/assets/icons/caracteristiques/puissance.svg"
                            title = "EXITNIHILO.SideBar.Caracteristiques.Title"
                            alt = "EXITNIHILO.SideBar.Caracteristiques.Alt"
                            extraCss= "up small" }}
                        <p class="titre">{{localize "EXITNIHILO.SideBar.Caracteristiques.PuissanceTitle"}}: </p>
                    </div>
                    <p class="valeur">{{actor.system.attributs.caracteristiquesCalculees.puissance}}</p>
                </label>
            </div>
            <div class="caracteristique">
                <input type="radio" id="vitalite" name="caracteristique" value="vitalite">
