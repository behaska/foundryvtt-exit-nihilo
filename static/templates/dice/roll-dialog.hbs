        <div class="modificateurs container">
            <div class="bonus-malus container">
                <label for="bonus-malus">Modificateur</label>
                <input class="bonus-malus" id="bonus-malus" name="bonus-malus" type="number" value="0" />
            </div>
            <div class="roll-visibility container">
                <label>{{localize "EXITNIHILO.Dialogue.LancerDeDes.ModeDeLancer"}}</label>
                <select name="rollMode">
                    {{#select rollMode}}
                        {{#each rollModes as |label mode|}}
                            {{log "Label" label}}
                            <option value="{{mode}}">{{localize label}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </div>
        </div>
</form>
