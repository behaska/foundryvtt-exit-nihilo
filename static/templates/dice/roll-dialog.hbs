<form autocomplete="off" spellcheck="off">
    <input type="hidden" id="valeurCompetence" name="valeurCompetence" value="{{valeurCompetence}}">
    <input type="hidden" id="titreCompetence" name="titreCompetence" value="{{titreCompetence}}">
    <h1>{{titreCompetence}}</h1>
    <div class="roll-dialog-options form-group">
        <div class="caracteristiques">
            <div class="caracteristique">
                <input type="radio" id="puissance" name="caracteristique" value="puissance" checked>
                <label for="puissance">
